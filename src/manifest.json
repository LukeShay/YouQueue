{
    "manifest_version": 2,
    "name": "YouQueue",
    "version": "0.1",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["/styles/extensionUI.css"],
            "js": ["/scripts/content.js"]
        }
    ],
    "background": {
        "scripts": ["/scripts/background.js", "/scripts/popup.js", "/scripts/authentication.js", "/scripts/queue_storage.js"],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "browser_action": {
        "default_icon": "/resources/icons8-musical-notes-64.png",
        "default_popup": "/html/authentication.html"
    },

    "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self';"
}